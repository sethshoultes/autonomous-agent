# ============================================================================
# Production Environment Configuration Template
# ============================================================================
# This file contains environment variables for production deployment.
# Copy this file to .env.production and fill in the actual values.
# ============================================================================

# Environment Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Configuration
APP_NAME=autonomous-agent
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4
APP_MAX_CONNECTIONS=100

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=AES-256-GCM

# Database Configuration
DATABASE_URL=postgresql://agent:${POSTGRES_PASSWORD}@postgres:5432/autonomous_agent
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=autonomous_agent
DATABASE_USER=agent
DATABASE_PASSWORD=${POSTGRES_PASSWORD}
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Ollama Configuration
OLLAMA_URL=http://ollama:11434
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=120
OLLAMA_MAX_RETRIES=3

# Gmail Agent Configuration
GMAIL_ENABLED=true
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=https://your-domain.com/auth/gmail/callback
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send
GMAIL_RATE_LIMIT=100
GMAIL_BATCH_SIZE=50

# Research Agent Configuration
RESEARCH_ENABLED=true
RESEARCH_SOURCES=web,academic,news
RESEARCH_MAX_RESULTS=100
RESEARCH_CACHE_TTL=3600
RESEARCH_RATE_LIMIT=50

# Code Agent Configuration
CODE_ENABLED=true
CODE_SUPPORTED_LANGUAGES=python,javascript,java,cpp,go,rust
CODE_MAX_FILE_SIZE=1048576
CODE_TIMEOUT=60

# Intelligence Engine Configuration
INTELLIGENCE_ENABLED=true
INTELLIGENCE_DECISION_TIMEOUT=30
INTELLIGENCE_LEARNING_RATE=0.1
INTELLIGENCE_CONFIDENCE_THRESHOLD=0.7

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=15

GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=${GRAFANA_PASSWORD}

# Logging Configuration
ELASTICSEARCH_ENABLED=true
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD}

KIBANA_ENABLED=true
KIBANA_PORT=5601

# API Configuration
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
API_CORS_ORIGINS=https://your-domain.com
API_CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
API_CORS_HEADERS=Content-Type,Authorization

# HTTPS Configuration
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem
SSL_PROTOCOLS=TLSv1.2,TLSv1.3

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_STORAGE_PATH=/opt/autonomous-agent/backups
BACKUP_COMPRESSION=gzip

# External Services Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Notification Configuration
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USERNAME=alerts@your-domain.com
SMTP_PASSWORD=${SMTP_PASSWORD}
SMTP_FROM=alerts@your-domain.com

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Performance Configuration
PERFORMANCE_MONITORING=true
PERFORMANCE_PROFILING=false
PERFORMANCE_METRICS_RETENTION=30

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_MULTI_TENANT=false
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true

# Development/Debug Configuration (set to false in production)
DEBUG_MODE=false
DEBUG_SQL=false
DEBUG_REQUESTS=false
ENABLE_SWAGGER=false

# Worker Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_WORKERS=4
CELERY_MAX_TASKS_PER_CHILD=1000

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=autonomous-agent
CACHE_REDIS_HOST=redis
CACHE_REDIS_PORT=6379
CACHE_REDIS_DB=2

# Session Configuration
SESSION_TYPE=redis
SESSION_REDIS=redis://redis:6379/3
SESSION_PERMANENT=false
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/opt/autonomous-agent/storage
STORAGE_MAX_SIZE=1073741824
STORAGE_ALLOWED_EXTENSIONS=.txt,.pdf,.docx,.xlsx,.csv,.json,.xml

# Timezone Configuration
TIMEZONE=UTC
LOCALE=en_US.UTF-8

# Resource Limits
MAX_MEMORY_PER_WORKER=512M
MAX_CPU_PER_WORKER=1.0
MAX_CONCURRENT_REQUESTS=100
MAX_REQUEST_SIZE=10MB

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_HSTS_ENABLED=true
SECURITY_HSTS_MAX_AGE=31536000
SECURITY_CSP_ENABLED=true
SECURITY_CSP_POLICY=default-src 'self'

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=90

# Maintenance Configuration
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_BUILD_DATE=2024-01-01T00:00:00Z
DEPLOYMENT_GIT_COMMIT=abc123def456

# ============================================================================
# Secrets (These should be set in your secrets management system)
# ============================================================================
# Do not put actual secret values in this file!
# Use environment variables or a secrets management system.

# Database secrets
POSTGRES_PASSWORD=

# Redis secrets
REDIS_PASSWORD=

# Application secrets
JWT_SECRET=
ENCRYPTION_KEY=

# OAuth secrets
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_SECRET=

# Email secrets
SMTP_PASSWORD=

# Monitoring secrets
GRAFANA_PASSWORD=
ELASTICSEARCH_PASSWORD=

